<Window x:Class="OfficeDeploymentTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Office Deployment Tool"
        Height="800" Width="600"
        ResizeMode="CanMinimize"
        Background="#F2F4F7"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="🛠 Office Deployment Tool"
                   FontSize="20" FontWeight="Bold"
                   Foreground="#2C3E50" Margin="0,0,0,10" />

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">

                <Border Background="White" CornerRadius="8" Padding="10" BorderBrush="#DDE1E6" BorderThickness="1" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Chọn phiên bản Office" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                        <UniformGrid Rows="1" Columns="4" Margin="0,5">
                            <RadioButton x:Name="rbOffice2016" Content="2016" GroupName="OfficeVersions"/>
                            <RadioButton x:Name="rbOffice2019" Content="2019" GroupName="OfficeVersions"/>
                            <RadioButton x:Name="rbOffice2021" Content="2021" GroupName="OfficeVersions"/>
                            <RadioButton x:Name="rbOffice365"  Content="365"  GroupName="OfficeVersions"/>
                        </UniformGrid>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="8" Padding="10" BorderBrush="#DDE1E6" BorderThickness="1" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <StackPanel Margin="0,0,30,0">
                            <TextBlock Text="Ngôn ngữ" FontWeight="SemiBold"/>
                            <ComboBox x:Name="comboLanguage" Width="120" Margin="0,5,0,0">
                                <ComboBoxItem Content="en_US" Tag="en_US" IsSelected="True"/>
                                <ComboBoxItem Content="vi_VN" Tag="vi_VN"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Kiến trúc" FontWeight="SemiBold"/>
                            <ComboBox x:Name="comboArch" Width="100" Margin="0,5,0,0">
                                <ComboBoxItem Content="32-bit" Tag="32"/>
                                <ComboBoxItem Content="64-bit" Tag="64" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="8" Padding="10" BorderBrush="#DDE1E6" BorderThickness="1" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Chọn ứng dụng" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                        <UniformGrid Columns="2">
                            <CheckBox x:Name="cbWord" Content="Word"/>
                            <CheckBox x:Name="cbExcel" Content="Excel"/>
                            <CheckBox x:Name="cbPowerpoint" Content="PowerPoint"/>
                            <CheckBox x:Name="cbOutlook" Content="Outlook"/>
                            <CheckBox x:Name="cbAccess" Content="Access"/>
                            <CheckBox x:Name="cbOneNote" Content="OneNote"/>
                            <CheckBox x:Name="cbPublisher" Content="Publisher"/>
                            <CheckBox x:Name="cbTeams" Content="Teams"/>
                        </UniformGrid>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="8" Padding="10" BorderBrush="#DDE1E6" BorderThickness="1" Margin="0,0,0,10">
    <StackPanel>
        <TextBlock Text="Sản phẩm riêng (tùy chọn)" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
        <StackPanel Orientation="Horizontal" Margin="0">
            <CheckBox x:Name="cbProject" Content="Project" Margin="0,0,30,0"/>
            <CheckBox x:Name="cbVisio" Content="Visio"/>
        </StackPanel>
    </StackPanel>
</Border>

                <Button x:Name="btnConfirm"
                        Content="Cài đặt Office"
                        Width="160" Height="35"
                        Background="#0078D7" Foreground="White"
                        FontWeight="Bold" HorizontalAlignment="Center"
                        BorderThickness="0" Margin="0,0,0,10"
                        Style="{StaticResource RoundedButtonStyle}"/>

                <Border Background="White" CornerRadius="8" Padding="10" BorderBrush="#DDE1E6" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Nhật kí cài đặt" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,5"/>
                        <TextBox x:Name="LogTextBox"
                                 Height="100"
                                 VerticalScrollBarVisibility="Auto"
                                 TextWrapping="Wrap"
                                 IsReadOnly="True"
                                 FontSize="12"
                                 Background="#FBFBFB"
                                 BorderBrush="#CCCCCC"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <TextBlock Grid.Row="2" Text="© 2025 Như Phúc" FontSize="11"
                   HorizontalAlignment="Center" Margin="0,10,0,0"
                   Foreground="Gray"/>
    </Grid>
</Window>